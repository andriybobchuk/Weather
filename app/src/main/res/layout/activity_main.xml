<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#0F0E10">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="394dp"
            android:layout_height="88dp"
            android:background="@drawable/bgrate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout" android:layout_marginBottom="7dp">

        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day0"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day1"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day2"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day3"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day4"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day5"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_day6"
                android:layout_weight="1"
                android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:background="@drawable/select_butn_style"
                android:textColor="@color/btn_background_color"
                android:textAlignment="center"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@id/linearLayout"
            android:scrollbarSize="0dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="6dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarAlwaysDrawVerticalTrack="false" android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarSize="0dp" android:scrollbars="none">

            <ImageView
                    android:layout_width="411dp"
                    android:layout_height="478dp" app:srcCompat="@drawable/clouds"
                    android:id="@+id/iv_theme"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_bold"
                    app:fontFamily="@font/gotham_bold"
                    android:text="[Day]"
                    android:textSize="23sp" android:textColor="#FFFFFF"
                    android:id="@+id/tv_day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
                    android:text="-째C"
                    android:textSize="50sp" android:textColor="#FFFFFF"
                    android:id="@+id/tv_temperature"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.797"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="272dp"/>
            <TextView
                    android:text="[Take your umbrella with you!]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_hint"
                    android:textColor="#8C8C8C" android:fontFamily="@font/gotham_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/tv_details" android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
                    android:text="-째... -째"
                    android:textSize="20sp" android:textColor="#8C8C8C"
                    android:id="@+id/tv_min_max"
                    app:layout_constraintTop_toBottomOf="@+id/tv_temperature"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.808"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="?android:attr/listChoiceIndicatorSingle"
                    android:id="@+id/btn_options"
                    android:background="?android:attr/listChoiceIndicatorSingle"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp" android:layout_marginEnd="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
                    android:text="[Region]"
                    android:textSize="15sp" android:textColor="#8C8C8C"
                    android:id="@+id/tv_region"
                    app:layout_constraintTop_toBottomOf="@+id/tv_day" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="25dp"/>
            <TextView
                    android:layout_width="345dp"
                    android:layout_height="22dp"
                    app:fontFamily="@font/gotham_medium" android:fontFamily="@font/gotham_medium"
                    android:text="[Feels like -째, scattered clouds]"
                    android:textSize="17.5sp" android:textColor="#FFFFFF"
                    android:id="@+id/tv_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/iv_theme"
                    android:layout_marginTop="18dp" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="16dp"/>
            <HorizontalScrollView
                    android:layout_width="409dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/tv_hint"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="60dp" android:scrollbarSize="0dp">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="117dp"
                            android:layout_height="148dp"
                            android:background="@drawable/bgrate"
                            android:id="@+id/ll_wind" android:layout_marginLeft="15dp">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                app:srcCompat="@drawable/wind2_icon" android:id="@+id/doesntmatter5"
                                android:layout_marginTop="15dp" android:layout_marginBottom="10dp"/>
                        <TextView
                                android:text="Wind"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" android:id="@+id/doesntmatter6"
                                android:textAlignment="center" android:fontFamily="@font/gotham_medium"
                                android:gravity="center"/>
                        <TextView
                                android:text="-"
                                android:layout_width="match_parent"
                                android:layout_height="50dp" android:id="@+id/tv_wind"
                                android:textAlignment="gravity" android:layout_gravity="center"
                                tools:layout_gravity="center" android:gravity="center"
                                android:fontFamily="@font/gotham_medium" android:textSize="17sp"
                                android:textColor="#FFFF"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="117dp"
                            android:layout_height="148dp"
                            android:background="@drawable/bgrate"
                            android:id="@+id/ll_humidity" android:layout_marginLeft="15dp">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                app:srcCompat="@drawable/drop_icon" android:id="@+id/iv_humidity"
                                android:layout_marginTop="15dp" android:layout_marginBottom="10dp"/>
                        <TextView
                                android:text="Humidity"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" android:id="@+id/doesntmatter1"
                                android:textAlignment="center" android:fontFamily="@font/gotham_medium"
                                android:gravity="center"/>
                        <TextView
                                android:text="-"
                                android:layout_width="match_parent"
                                android:layout_height="50dp" android:id="@+id/tv_humidity"
                                android:textAlignment="gravity" android:layout_gravity="center"
                                tools:layout_gravity="center" android:gravity="center"
                                android:fontFamily="@font/gotham_medium" android:textSize="18sp"
                                android:textColor="#FFFF"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="117dp"
                            android:layout_height="148dp"
                            android:background="@drawable/bgrate"
                            android:id="@+id/ll_uvi" android:layout_marginLeft="15dp">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                app:srcCompat="@drawable/summer_icon" android:id="@+id/doesntmatter8"
                                android:layout_marginTop="15dp" android:layout_marginBottom="10dp"/>
                        <TextView
                                android:text="UV"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" android:id="@+id/doesntmatter9"
                                android:textAlignment="center" android:fontFamily="@font/gotham_medium"
                                android:gravity="center"/>
                        <TextView
                                android:text="-"
                                android:layout_width="match_parent"
                                android:layout_height="50dp" android:id="@+id/tv_uvi"
                                android:textAlignment="gravity" android:layout_gravity="center"
                                tools:layout_gravity="center" android:gravity="center"
                                android:fontFamily="@font/gotham_medium" android:textSize="18sp"
                                android:textColor="#FFFF"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="117dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bgrate"
                            android:id="@+id/ll_pressure" android:layout_marginLeft="15dp">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                app:srcCompat="@drawable/temp_icon" android:id="@+id/doesntmatter2"
                                android:layout_marginTop="15dp" android:layout_marginBottom="10dp"/>
                        <TextView
                                android:text="Pressure"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" android:id="@+id/doesntmatter3"
                                android:textAlignment="center" android:fontFamily="@font/gotham_medium"
                                android:gravity="center"/>
                        <TextView
                                android:text="-"
                                android:layout_width="match_parent"
                                android:layout_height="50dp" android:id="@+id/tv_pressure"
                                android:textAlignment="gravity" android:layout_gravity="center"
                                tools:layout_gravity="center" android:gravity="center"
                                android:fontFamily="@font/gotham_medium" android:textSize="15sp"
                                android:textColor="#FFFF"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="117dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bgrate"
                            android:id="@+id/ll_clouds" android:layout_marginLeft="15dp">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                app:srcCompat="@drawable/clouds_icon" android:id="@+id/doesntmatter11"
                                android:layout_marginTop="15dp" android:layout_marginBottom="10dp"/>
                        <TextView
                                android:text="Clouds"
                                android:layout_width="match_parent"
                                android:layout_height="30dp" android:id="@+id/doesntmatter12"
                                android:textAlignment="center" android:fontFamily="@font/gotham_medium"
                                android:gravity="center"/>
                        <TextView
                                android:text="-"
                                android:layout_width="match_parent"
                                android:layout_height="50dp" android:id="@+id/tv_clouds"
                                android:textAlignment="gravity" android:layout_gravity="center"
                                tools:layout_gravity="center" android:gravity="center"
                                android:fontFamily="@font/gotham_medium" android:textSize="18sp"
                                android:textColor="#FFFF"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

